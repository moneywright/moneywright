{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for Moneywright desktop app",
  "windows": ["main", "update", "about", "logs"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-close",
    "process:default",
    "updater:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "moneywright",
          "sidecar": true
        }
      ]
    }
  ]
}
