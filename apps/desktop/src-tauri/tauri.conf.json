{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Moneywright",
  "version": "0.8.0",
  "identifier": "com.moneywright.desktop",
  "build": {
    "frontendDist": "http://localhost:17777",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Moneywright",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ2MzUzMDY0Q0YyQzBDQzIKUldUQ0RDelBaREExMWlWRVNibGFaRXFkL1ZpUTU0SXdCNmJqZUV6SW50NW5yVGtnaittZVc2eUgK",
      "endpoints": [
        "https://github.com/moneywright/moneywright/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg",
      "nsis",
      "deb"
    ],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/moneywright"
    ],
    "resources": {
      "binaries/drizzle": "drizzle",
      "binaries/public": "public"
    },
    "publisher": "Moneywright",
    "copyright": "Copyright (c) 2025 Moneywright",
    "category": "Finance",
    "shortDescription": "Personal finance manager",
    "longDescription": "Moneywright is a privacy-focused personal finance manager that runs locally on your machine. Upload bank statements, track expenses, and get AI-powered insights - all without sharing your data.",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist",
      "dmg": {
        "background": "./dmg-background.png",
        "windowSize": {
          "width": 540,
          "height": 380
        },
        "appPosition": {
          "x": 130,
          "y": 190
        },
        "applicationFolderPosition": {
          "x": 410,
          "y": 190
        }
      }
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico"
      }
    },
    "linux": {
      "deb": {
        "section": "finance"
      }
    }
  }
}
